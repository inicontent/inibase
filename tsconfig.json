{
	"compilerOptions": {
		// Enable latest features
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"moduleDetection": "force",
		"outDir": "dist",
		"rootDir": "src",
		"allowJs": true,
		"declaration": true,
		// Bundler mode
		"verbatimModuleSyntax": true,
		"noEmit": false,
		// Best practices
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		// Some stricter flags
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules"
	]
}